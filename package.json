{
  "name": "enzyme-example-mocha",
  "version": "0.1.0",
  "description": "Example project with React + Enzyme + Mocha",
  "main": "build/index.js",
  "scripts": {
    "build": "webpack",
    "test": "npm run test:unit",
    "start": "npm run build && node server",
    "test:unit": "node test/unit.js",
    "test:journey": "selenium-standalone start | node server | node ./test/journey.js",
    "test:journey-js": "npm run build && node ./test/journey-js.js",
    "test:all": "selenium-standalone start | npm run start | node test/.mocha.js | node ./test/journey.js | node ./test/.selenium.js",
    "watch:test:unit": "nodemon -x 'npm run test:unit'",
    "watch:test:journey": "selenium-standalone start | npm run start | nodemon -x 'node ./test/journey.js'",
    "watch:test:journey-js": "npm run start | nodemon -x 'node ./test/journey-js.js'",
    "watch:test:all": "selenium-standalone start | npm run start | nodemon -x 'node test/.mocha.js | node ./test/journey.js | node ./test/journey-js.js'",
    "watch:serve": "webpack-dev-server --watch",
    "git:push": "npm run test:all && git push",
    "postinstall": "npm run test"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=7.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lelandrichardson/enzyme-example-mocha.git"
  },
  "author": "Leland Richardson <leland.richardson@airbnb.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lelandrichardson/enzyme-example-mocha/issues"
  },
  "homepage": "https://github.com/lelandrichardson/enzyme-example-mocha",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-airbnb": "^1.0.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.4.3",
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "chai-webdriver-promised": "^4.0.3",
    "css-loader": "0.25.0",
    "css-modules-require-hook": "^4.0.5",
    "dotenv": "^4.0.0",
    "enzyme": "^2.0.0",
    "file-loader": "0.9.0",
    "growl": "^1.9.2",
    "jsdom": "^8.0.1",
    "json-loader": "0.5.4",
    "mocha": "^2.4.5",
    "mocha-ci-slack-reporter": "^1.0.1",
    "node-sass": "^3.10.0",
    "nodemon": "^1.11.0",
    "phantomjs-prebuilt": "^2.1.14",
    "postcss-loader": "1.1.0",
    "react-addons-test-utils": "^15.4.0",
    "require-hacker": "^2.1.4",
    "resolve-url-loader": "1.6.0",
    "sass-loader": "4.0.2",
    "selenium-html-js-converter": "^0.4.7",
    "selenium-webdriver": "^3.0.1",
    "sinon": "^1.17.7",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "wd-sync": "^1.2.5",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "react": "^15.4.0",
    "react-dom": "^15.4.0"
  }
}
