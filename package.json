{
  "name": "enzyme-example-mocha",
  "version": "0.1.0",
  "description": "Example project with React + Enzyme + Mocha",
  "main": "build/index.js",
  "scripts": {
    "build": "webpack",
    "test": "npm run test:unit",
    "start": "npm run test && npm run build && node server",
    "test:unit" : "mocha test/.setup.js test/**/*-test.js",
    "test:journey": "selenium-standalone start | serve ./public -p 3999 | node ./test/.wd-sync.js",
    "test:journey-js": "serve ./public -p 3999 | node ./test/.selenium.js",
    "watch:test": "nodemon -x 'mocha test/.setup.js test/**/*-test.js'",
    "watch:serve": "webpack-dev-server --watch"
  },
  "engineStrict": true,
  "engines" : {
    "node" : ">=7.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lelandrichardson/enzyme-example-mocha.git"
  },
  "author": "Leland Richardson <leland.richardson@airbnb.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lelandrichardson/enzyme-example-mocha/issues"
  },
  "homepage": "https://github.com/lelandrichardson/enzyme-example-mocha",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-airbnb": "^1.0.1",
    "babel-register": "^6.4.3",
    "body-parser": "^1.15.2",
    "chai": "^3.5.0",
    "css-loader": "0.25.0",
    "css-modules-require-hook": "^4.0.5",
    "dot-env": "0.0.1",
    "dotenv": "^4.0.0",
    "enzyme": "^2.0.0",
    "file-loader": "0.9.0",
    "jsdom": "^8.0.1",
    "json-loader": "0.5.4",
    "mocha": "^2.4.5",
    "node-sass": "3.5.3",
    "nodemon": "^1.11.0",
    "postcss-loader": "1.1.0",
    "react-addons-test-utils": "^15.4.0",
    "resolve-url-loader": "1.6.0",
    "sass-loader": "4.0.2",
    "selenium-html-js-converter": "^0.4.7",
    "selenium-webdriver": "^3.0.1",
    "serve": "^1.4.0",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "wd-sync": "^1.2.5",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "react": "^15.4.0",
    "react-dom": "^15.4.0"
  }
}
